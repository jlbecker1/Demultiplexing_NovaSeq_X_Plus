process {
    errorStrategy = 'terminate'
    maxRetries    = 1

    withName: DEMULTIPLEX_BCLCONVERT {
        container = 'illumina/bcl-convert:4.1.7'
        cpus      = 16
        memory    = '64 GB'
        time      = '24h'
    }

    withName: FASTQC {
        container = 'biocontainers/fastqc:v0.11.9_cv8'
        cpus      = 2
        memory    = '4 GB'
        time      = '6h'
    }

    withName: MD5SUM {
        container = 'ubuntu:22.04'
        cpus      = 1
        memory    = '1 GB'
        time      = '6h'
    }

    withName: MULTIQC_BY_PROJECT {
        container = 'biocontainers/multiqc:v1.21--pyhdfd78af_0'
        cpus      = 2
        memory    = '4 GB'
        time      = '6h'
    }
}
